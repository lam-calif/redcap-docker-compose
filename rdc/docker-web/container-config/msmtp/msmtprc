# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

account   main
host      SMTP_HOST
port      SMTP_PORT
from      SMTP_USER
user      SMTP_USER
password  SMTP_PASS

# Set a default account
account default: main